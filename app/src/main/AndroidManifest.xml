<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.appcenter.inudorm">

    <uses-sdk tools:overrideLibrary="androidx.core.splashscreen" />

    <queries>
        <package android:name="com.mailplug.aeolos2" />
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IDorm">
        <activity
            android:name=".presentation.OnboardActivity"
            android:exported="true"
            android:label="@string/title_activity_onboard"
            android:theme="@style/Theme.IDorm">


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.FindPassActivity"
            android:exported="true"></activity>
        <activity
            android:name=".presentation.SplashActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.account.WelcomeActivity"
            android:exported="true" />

        <activity
            android:name=".presentation.RegisterActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".presentation.LoginActivity"
            android:exported="true">


        </activity>
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true" >

        </activity>
    </application>

</manifest>