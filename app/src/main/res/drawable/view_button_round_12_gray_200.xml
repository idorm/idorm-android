<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/iDorm_blue_0">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width = "4dp" android:color = "@color/iDorm_shadow"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/iDorm_gray_200"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</ripple>