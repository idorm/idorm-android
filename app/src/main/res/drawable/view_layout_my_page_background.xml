<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/iDorm_shadow"/>
            <corners
                android:bottomLeftRadius="24dp"
                android:bottomRightRadius="24dp"/>
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/iDorm_blue"/>
            <corners
                android:bottomLeftRadius="24dp"
                android:bottomRightRadius="24dp"/>
        </shape>
    </item>

</layer-list>