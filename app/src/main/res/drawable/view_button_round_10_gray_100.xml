<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/iDorm_gray_200">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/iDorm_gray_100"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/iDorm_gray_100"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</ripple>