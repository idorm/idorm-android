<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="codeViewModel"
            type="org.appcenter.inudorm.presentation.account.prompt.CodePromptViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:paddingBottom="33dp"
        tools:context=".presentation.account.prompt.CodePromptFragment">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/resendArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="49dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/codeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/notosans_medium"
                        android:includeFontPadding="false"
                        android:text="@string/sendCertificationText"
                        android:textColor="@color/iDorm_gray_400"
                        android:textSize="12sp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/resendCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_medium"
                        android:includeFontPadding="false"

                        android:onClick="@{() -> codeViewModel.resendCode()}"
                        android:padding="5dp"
                        android:text="@string/sendCertificationAgainInteraction"
                        android:textColor="@color/iDorm_gray_300"
                        android:textSize="12sp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:timerBehavior="@{codeViewModel.timer}" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.DesignSystem.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/resendArea"
                    app:suffixText="03:00"
                    app:suffixTextColor="@color/iDorm_blue"
                    app:hintEnabled="false"
                    timerBehavior="@{codeViewModel.timer}"
                    android:layout_marginTop="14dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:theme="@style/Widget.DesignSystem.TextInputEditText.FilledBox.Inside"
                        android:id="@+id/editText"
                        code="@={codeViewModel.code}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/notosans_medium"
                        android:hint="@string/inputCertificationText"
                        android:includeFontPadding="false"
                        android:inputType="numberDecimal"
                        android:maxLength="7"
                        android:text=""
                        android:textColorHint="@color/iDorm_gray_300"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--                <androidx.constraintlayout.widget.ConstraintLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginTop="14dp"-->
                <!--                    android:background="@drawable/view_edit_text_round_stroke_gray_400"-->
                <!--                    android:padding="14dp"-->
                <!--                    app:layout_constraintEnd_toEndOf="parent"-->
                <!--                    app:layout_constraintStart_toStartOf="parent"-->
                <!--                    app:layout_constraintTop_toBottomOf="@id/resendArea">-->

                <!--                  -->
                <!--                    <TextView-->
                <!--                        android:id="@+id/remainTime"-->
                <!--                        seconds="@{codeViewModel.timer}"-->
                <!--                        android:layout_width="wrap_content"-->

                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:fontFamily="@font/notosans_medium"-->
                <!--                        android:includeFontPadding="false"-->
                <!--                        android:text="03:00"-->
                <!--                        android:textColor="@color/iDorm_blue"-->
                <!--                        android:textSize="14sp"-->

                <!--                        app:layout_constraintBottom_toBottomOf="parent"-->
                <!--                        app:layout_constraintEnd_toEndOf="parent"-->
                <!--                        app:layout_constraintTop_toTopOf="parent" />-->
                <!--                </androidx.constraintlayout.widget.ConstraintLayout>-->

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"

            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/view_button_round_10"
            android:fontFamily="@font/notosans_medium"


            android:includeFontPadding="false"
            android:onClick="@{() -> codeViewModel.submit()}"
            android:text="@string/CertificationContinueInteraction"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>