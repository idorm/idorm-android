<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="org.appcenter.inudorm.presentation.mypage.MyInfoSettingViewModel" />

        <variable
            name="build"
            type="org.appcenter.inudorm.BuildConfig" />

        <variable
            name="activity"
            type="org.appcenter.inudorm.presentation.mypage.MyInfoSettingActivity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        tools:context=".presentation.mypage.MyInfoSettingActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:textAlignment="center"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/myInformationSettingText"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_margin="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/view_image_view_round_stroke_white_gray_100"
            android:elevation="4dp"
            app:imageUrl="@{viewModel.myPageState.data.profilePhotoUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingVertical="36dp"
            android:paddingLeft="24dp"
            android:paddingRight="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@{viewModel.myPageState.data.nickname}"
                android:textColor="@color/iDorm_gray_300"
                android:textSize="16sp"

                app:drawableEndCompat="@drawable/ic_go_depth"
                app:layout_constraintBottom_toBottomOf="@+id/nickNameText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nickNameText" />

            <TextView
                android:id="@+id/nickNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:onClick="@{() -> activity.changeNickName()}"
                android:paddingVertical="12dp"
                android:text="@string/nickNameText"
                android:textColor="@color/iDorm_gray_400"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/nickNameText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:onClick="@{() -> activity.changePassword()}"
                android:paddingVertical="12dp"
                android:text="@string/changePasswordText"
                android:textColor="@color/iDorm_gray_400"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_go_depth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nickNameText" />


            <TextView
                android:id="@+id/nickNameText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:onClick="@{() -> activity.settingNotification()}"
                android:paddingVertical="12dp"
                android:text="@string/notificationSettingText"
                android:textColor="@color/iDorm_gray_400"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_go_depth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nickNameText2" />


            <TextView
                android:id="@+id/nickNameText4"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/emailText"
                android:textColor="@color/iDorm_gray_400"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nickNameText3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@{viewModel.myPageState.data.email}"
                android:textColor="@color/iDorm_gray_300"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/nickNameText4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nickNameText4" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout10"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/iDorm_gray_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout8" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="36dp"
            android:paddingStart="24dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout10"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/nickNameText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:onClick="@{() -> activity.terms()}"
                android:paddingVertical="12dp"
                android:text="@string/serviceAgreeText"
                android:textColor="@color/iDorm_gray_400"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_go_depth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/nickNameText6"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@string/versionInfoText"
                android:textColor="@color/iDorm_gray_400"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nickNameText5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="@{build.VERSION_NAME}"
                android:textColor="@color/iDorm_gray_300"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/nickNameText6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nickNameText6"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout12"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/iDorm_gray_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout11" />

        <TextView
            android:id="@+id/withdrawText"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:onClick="@{() -> activity.withdraw()}"
            android:text="@string/withdrawalText"
            android:textColor="@color/iDorm_gray_300"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout12" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/view_button_round_6"
            android:textColor="@color/white"
            android:onClick="@{() -> activity.signOut()}"
            android:text="@string/signout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/withdrawText" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
