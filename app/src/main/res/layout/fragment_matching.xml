<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="matchingViewModel"
            type="org.appcenter.inudorm.presentation.matching.MatchingViewModel" />

        <variable
            name="app"
            type="org.appcenter.inudorm.App" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/preparing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/graphic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_character_ready"
                android:layout_marginBottom="24sp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_bold"
                android:includeFontPadding="false"
                android:text="룸메이트 매칭"
                android:textColor="@color/iDorm_gray_300"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="12sp">

                <TextView
                    android:id="@+id/date"
                    date="@{app.Companion.whenMatchingStarts}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/iDorm_blue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_bold"
                    android:includeFontPadding="false"
                    android:text=" 오픈 예정"
                    android:textColor="@color/iDorm_blue"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_medium"
                android:text="여름방학 룸메이트 매칭 시즌에 만나요."
                android:includeFontPadding="false"
                android:textColor="@color/iDorm_gray_300"
                android:textSize="14sp" />


        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/matching"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/iDorm_matching_screen"
            android:visibility="gone">

            <!-- 상단 아크모양 View. ConstraintLayout은 코드 상 위에 있는게 제일 아래에 깔립니다.-->
            <io.github.florent37.shapeofview.shapes.ArcView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:shape_arc_height="50dp"
                app:shape_arc_position="bottom">

                <FrameLayout
                    android:id="@+id/circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/iDorm_blue" />

            </io.github.florent37.shapeofview.shapes.ArcView>

            <!-- 필터설정, 새로고침 버튼이 있는 조작부입니다. -->
            <LinearLayout
                android:id="@+id/controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="24dp"
                    android:orientation="horizontal">


                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/refreshButton"
                        style="@style/Widget.DesignSystem.Chip.FlatBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/notosans_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/iDorm_blue"
                        android:onClick="@{() -> matchingViewModel.refresh()}"
                        android:paddingHorizontal="10dp"
                        android:text="@string/refreshInteraction" />

                    <ImageButton
                        android:id="@+id/openFilterButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_prefs" />

                </LinearLayout>


            </LinearLayout>

            <!-- 룸메이트를 다 스와이프 하고 나면 마지막에 뜨는 View 입니다ㄱ -->
            <FrameLayout
                android:id="@+id/endOfItems"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:foregroundGravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/controls">


                <com.google.android.material.progressindicator.CircularProgressIndicator
                    matchingState="@{matchingViewModel.matchingState}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:indeterminate="true" />

                <TextView
                    matchingState="@{matchingViewModel.matchingState}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="@string/noMoreRoomMates"
                    android:textAlignment="center"
                    android:textSize="12sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="0dp"
                    android:elevation="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@id/stackViewControl"
                    app:layout_constraintTop_toBottomOf="@id/controls">


                    <com.yuyakaido.android.cardstackview.CardStackView
                        android:id="@+id/cardStackView"
                        matchingState="@{matchingViewModel.matchingState}"
                        android:layout_width="match_parent"
                        android:layout_height="470sp"

                        android:layout_marginVertical="0dp"
                        android:elevation="10dp"
                        tools:listitem="@layout/item_matching" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/stackViewControl"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/dislikeButton"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_marginHorizontal="20dp"
                            android:backgroundTint="@color/white"
                            android:enabled="@{!matchingViewModel.matchingState.loading &amp;&amp; matchingViewModel.matchingState.error == null}"
                            app:borderWidth="0dp"
                            app:elevation="3dp"
                            app:fabCustomSize="54dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:rippleColor="@color/iDorm_gray_200"
                            app:srcCompat="@drawable/ic_no_red"
                            app:tint="@color/iDorm_red" />

                        <!-- 이게 무슨 걔똥같은 문법이죠..? 논리연산자 &&를 쓸때 인코딩때문에 &amp; 로 써야한다네요;  -->
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/backButton"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:backgroundTint="@color/white"

                            android:enabled="@{!matchingViewModel.matchingState.loading &amp;&amp; matchingViewModel.matchingState.error == null}"
                            app:borderWidth="0dp"
                            app:elevation="3dp"
                            app:fabCustomSize="54dp"
                            app:layout_constraintEnd_toStartOf="@+id/chatButton"
                            app:layout_constraintStart_toEndOf="@id/dislikeButton"
                            app:layout_constraintTop_toTopOf="@id/dislikeButton"
                            app:rippleColor="@color/iDorm_gray_200"
                            app:srcCompat="@drawable/ic_back"

                            app:tint="@color/iDorm_blue" />


                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/chatButton"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_marginEnd="18dp"
                            android:backgroundTint="@color/white"
                            android:enabled="@{!matchingViewModel.matchingState.loading &amp;&amp; matchingViewModel.matchingState.error == null}"
                            app:borderWidth="0dp"
                            app:elevation="3dp"
                            app:fabCustomSize="54dp"
                            app:layout_constraintEnd_toStartOf="@+id/likeButton"
                            app:layout_constraintStart_toEndOf="@id/backButton"
                            app:layout_constraintTop_toTopOf="@id/dislikeButton"
                            app:rippleColor="@color/iDorm_gray_200"
                            app:srcCompat="@drawable/ic_chat_yellow"

                            app:tint="@color/iDorm_yellow" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/likeButton"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_marginEnd="18dp"
                            android:backgroundTint="@color/white"
                            android:enabled="@{!matchingViewModel.matchingState.loading &amp;&amp; matchingViewModel.matchingState.error == null}"
                            app:borderWidth="0dp"
                            app:elevation="3dp"
                            app:fabCustomSize="54sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/dislikeButton"
                            app:rippleColor="@color/iDorm_gray_200"
                            app:srcCompat="@drawable/ic_heart"

                            app:tint="@color/iDorm_green" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>