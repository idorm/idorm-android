<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:src="@drawable/ic_alram"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7">

        <TextView
            android:id="@+id/semesterNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"

            android:fontFamily="@font/notosans_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/semesterNum"
            android:textColor="@color/iDorm_blue"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/semesterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/notosans_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/semesterText"
            android:textColor="@color/iDorm_blue"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/semesterNum"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/roommateMatchingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="6dp"
            android:fontFamily="@font/notosans_bold"

            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/roommateMatchingText"
            android:textColor="@color/iDorm_gray_400"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/semesterText"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/withIdormText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/notosans_bold"

            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/withIdormText"
            android:textColor="@color/iDorm_gray_400"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/semesterNum"
            app:layout_constraintTop_toBottomOf="@+id/semesterText" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_character_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginButton"
            style="@style/Widget.DesignSystem.AppCompatButton.blue"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"

            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/view_button_round_6"

            android:drawableRight="@drawable/ic_matching_interaction"
            android:drawablePadding="-24dp"
            android:elevation="6dp"
            android:fontFamily="@font/notosans_medium"
            android:includeFontPadding="false"
            android:paddingHorizontal="62dp"

            android:shadowColor="#36000000"
            android:shadowDy="4"
            android:shadowRadius="6"

            android:text="@string/RoomMateMatchingInteraction"
            android:textColor="@color/white"
            android:textSize="14sp"

            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>