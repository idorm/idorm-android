<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="question"
            type="org.appcenter.inudorm.model.OnboardQuestion" />
        
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp">



        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_medium"


            android:includeFontPadding="false"
            android:text="@{question.questionText}"
            tools:text="질문"
            android:textColor="@color/iDorm_gray_400"
            android:textSize="14sp"

            app:layout_constraintHorizontal_weight="2.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"


            android:includeFontPadding="false"
            android:text="@{question.isRequired}"
            tools:text="(필수)"
            android:textColor="@color/iDorm_blue"
            android:textSize="14sp"

            android:layout_marginLeft="6dp"
            app:layout_constraintStart_toEndOf="@id/questionText"
            app:layout_constraintTop_toTopOf="@id/questionText"
            app:layout_constraintBottom_toBottomOf="@+id/questionText" />

        <!-- TODO : app:endIconMode="custom"으로 변경해서 더 많은 옵션 넣어야 함-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.DesignSystem.TextInputLayout.OutlinedBox"
            app:endIconMode="custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/questionText"
            app:layout_constraintTop_toBottomOf="@id/questionText"
            app:hintEnabled="false"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/answer"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:textSize="14sp"


                android:fontFamily="@font/notosans_medium"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:hint="@string/inputText"
                />
        </com.google.android.material.textfield.TextInputLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>