<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--하단 네비게이션 바 스타일-->
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--base_information_fragment 기숙사 선택-->
    <style name="Widget.DesignSystem.Chip.OutlinedBox.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
        <item name="chipBackgroundColor">@color/idorm_outlined_choice_background_color</item>
        <item name="chipStrokeColor">@color/idorm_outlined_choice_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/idorm_outlined_choice_text_color</item>
        <item name="fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <!--question_item 질문들-->
    <style name="Widget.DesignSystem.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/idorm_outlined_textinput_stroke</item>

        <item name="elevationOverlayEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeErrorColor">@color/iDorm_red</item>


    </style>
</resources>

