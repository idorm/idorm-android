<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--하단 네비게이션 바 스타일-->
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--base_information_fragment outlined chip 선택-->
    <style name="Widget.DesignSystem.Chip.OutlinedBox.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
        <item name="chipBackgroundColor">@color/selector_outlined_choice_background_color</item>
        <item name="chipStrokeColor">@color/selector_outlined_choice_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/selector_outlined_choice_text_color</item>
        <item name="fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--item_matching outlined chip 선택1-->
    <style name="Widget.DesignSystem.Chip.OutlinedBox.Choice2" parent="Widget.MaterialComponents.Chip.Choice">

        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>

        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">14sp</item>

        <item name="chipMinTouchTargetSize">33dp</item>
        <item name="chipMinHeight">29dp</item>
        <item name="textStartPadding">4dp</item>
        <item name="textEndPadding">4dp</item>
    </style>

    <!--item_matching outlined chip 선택2-->
    <style name="Widget.DesignSystem.Chip.OutlinedBox.Choice3" parent="Widget.MaterialComponents.Chip.Choice">

        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="cornerRadius">16dp</item>

        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:textSize">14sp</item>

        <item name="chipMinTouchTargetSize">29dp</item>
        <item name="chipMinHeight">29dp</item>
        <item name="textStartPadding">4dp</item>
        <item name="textEndPadding">4dp</item>
    </style>

    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <!--question_item 질문들-->
    <style name="Widget.DesignSystem.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_outlined_textinput_stroke</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeErrorColor">@color/iDorm_red</item>
    </style>

    <style name="Widget.DesignSystem.AppCompatButton.blue" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/selector_button_blue_background_color</item>
    </style>
</resources>

